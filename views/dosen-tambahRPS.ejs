<%- include('layout/head', {judul: 'Tambah RPS'}) %>
<div class="d-block mb-4 mb-md-0">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
        <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
            <li class="breadcrumb-item">
                <a href="/dosen">
                    <svg class="icon icon-xxs" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6">
                        </path>
                    </svg>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="/dosen">RPS Mata kuliah</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/dosen/detail-<%=rps.id %>">Detail Mata kuliah</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Tambah</li>
        </ol>
    </nav>
</div>
            <section class="section">
                <h2 class="h2">Tambah RPS Matakuliah</h2>
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"><%= rps.name %></h4>
                    </div>
                    <div class="card-body">
                        
                        <ul>
                        <li>Kode Mata Kuliah : <%= rps.code %></li>
                        <li>Semester : <%= rps.semester %></li>
                        <li>SKS : <%= rps.credit %></li>
                        </ul>
                        <!-- Button Modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#tambah-cpmk">Tambah CPMK</button>
                        <!-- Modal Content -->
                        <div class="modal fade" id="tambah-cpmk" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h2 class="h6 modal-title">Tambah CPMK</h2>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form action="/dosen/tambahcpmk" method="post">
                                    <div class="modal-body">
                                        <input type="hidden" name="course_plan_id" value="<%= rps.id %>">
                                        <input type="hidden" name="type" value="1">
                                        <input type="hidden" name="parent_id" value="1">
                                        <!-- <input type="hidden" name="parent_id" value="1"> -->
                                        <label>Kode </label>
                                        <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Kode" name="code" required>
                                        </div>
                                        <label>Name </label>
                                        <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Nama" name="name" required>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Tambah</button>
                                        <button type="button" class="btn btn-link text-gray ms-auto" data-bs-dismiss="modal">Tutup</button>
                                    </div>
                                </form>
                                </div>
                            </div>
                        </div>

                            <!-- Button Modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#tambah-referensi">Tambah Referensi</button>
                            <!-- Modal Content -->
                            <div class="modal fade" id="tambah-referensi" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2 class="h6 modal-title">Tambah Referensi</h2>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form action="/dosen/tambahreferensi" method="post">
                                        <div class="modal-body">
                                            <input type="hidden" name="course_plan_id" value="<%= rps.id %>">
                                            <label>Judul </label>
                                            <div class="input-group mb-3">
                                            <input type="text" class="form-control" placeholder="Masukkan Judul" name="title" required>
                                            </div>
                                            <label>Pengarang </label>
                                            <div class="input-group mb-3">
                                            <input type="text" class="form-control" placeholder="Masukkan Nama Pengarang" name="author" required>
                                            </div>
                                            <label>Penerbit </label>
                                            <div class="input-group mb-3">
                                            <input type="text" class="form-control" placeholder="Masukkan Nama Penerbit" name="publisher" required>
                                            </div>
                                            <label>Tahun </label>
                                            <div class="input-group mb-3">
                                            <input type="number" class="form-control" placeholder="Masukkan Tahun diterbitkan" name="year" required>
                                            </div>
                                            <label>Kategori</label>
                                            <div class="input-group mb-3">
                                            <select class="form-select" name="description" id="">
                                                <option value="Utama">Utama</option>
                                                <option value="Pendukung">Pendukung</option>
                                            </select>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-primary">Tambah</button>
                                            <button type="button" class="btn btn-link text-gray ms-auto" data-bs-dismiss="modal">Tutup</button>
                                        </div>
                                    </form>
                                    </div>
                                
                            </div>
                        </div>
                        
                        <!-- Button Modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#tambah-penilaian">Tambah Komponen Penilaian</button>
                        <!-- Modal Content -->
                        <div class="modal fade" id="tambah-penilaian" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <form action="/dosen/tambahpenilaian" method="post">
                                    <div class="modal-header">
                                        <h2 class="h6 modal-title">Tambah Komponen Penilaian</h2>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" name="course_plan_id" value="<%= rps.id %>">
                                        <input type="hidden" name="flag" value="1">
                                        <label>Komponen Penilaian </label>
                                        <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Komponen penilaian" name="name" required>
                                        </div>
                                        <label>Bobot </label>
                                        <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="persentase" name="percentage" required>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Tambah</button>
                                        <button type="button" class="btn btn-link text-gray ms-auto" data-bs-dismiss="modal">Tutup</button>
                                    </div>
                                </form>
                                </div>
                            </div>
                        </div>
                        <!-- Button Modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#tambah-mingguan">Tambah Pertemuan Mingguan</button>
                        <form action="/dosen/tambahmingguan" method="post">
                        <!-- Modal Content -->
                        <div class="modal fade" id="tambah-mingguan" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h2 class="h6 modal-title">Tambah Mingguan</h2>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" name="course_plan_id" value="<%= rps.id %>">
                                        <label>Minggu Ke- </label>
                                        <div class="input-group mb-3">
                                        <select class="form-select" name="week">
                                        <% for (var i = 1; i <=16;i++){%> 
                                        <option value="<%=i%>"><%=i%></option>
                                        <%}%>
                                        </select>
                                        </div>
                                        
                                        <label>Materi </label>
                                        <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="" name="material" required>
                                        </div>
                                        <label>Metode Pembelajaran </label>
                                        <div class="input-group mb-3">
                                            <select class="form-select" name="method">
                                                <option value="Project Based">Project Based</option>
                                                <option value="Cased Based">Cased Based</option>
                                                </select>
                                        </div>
                                        <label>Pengalaman Belajar </label>
                                        <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="" name="student_experience" required>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Tambah</button>
                                        <button type="button" class="btn btn-link text-gray ms-auto" data-bs-dismiss="modal">Tutup</button>
                                    </div>
                                </form>
                                </div>
                            
                        </div>
                    </div>
                        
                    </div>
                </div>
        </div>

<%- include('layout/foot') %>